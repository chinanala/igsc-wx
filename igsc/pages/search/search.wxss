.wxSearch {
  width: 100%;
  z-index: 999;
}

.wxSearchTitle {
  display: block;
  padding-left: 5rpx;
  font-size: 20rpx;
  text-align: left;
}

/** 提示样式 */

.wxSearchMindKeyItem {
  padding: 10rpx 5rpx 10rpx 15rpx;
  margin-left: 10rpx;
  /* border-bottom: 1px solid #eee; */
  display: flex;
  font-size: 20rpx;
}

/** 标签样式 */

.wxSearchKeyList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #eee;
}

/** 标签样式 */

.wxSearchKeyItem {
  flex: 0 0 20%;
  font-size: 20rpx;
  text-align: center;
  /* border: 1px solid #eee; */
  margin: 6rpx;
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
  background-color: rgba(200, 200, 200, 0.3);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/** 搜索记录标题栏 */

.wxSearchHistoryItem {
  padding-left: 5rpx;
  padding-right: 12rpx;
  display: flex;
  margin-bottom: -10rpx;
}

/** 搜索记录标题 */

.wxSearchHistoryItemTitle {
  flex: 8;
  font-size: 20rpx;
}

/** 搜索记录删除按钮 */

.wxSearchHistoryItemDel {
  flex: 1;
  font-size: 20rpx;
  text-align: center;
  padding-top: 2rpx;
  padding-bottom: 2rpx;
  border: 1rpx solid #eee;
  border-radius: 2rpx;
}

