@import "../search/search.wxss";

.item_work {
  min-height: 2.6em;
  border-bottom-width: 0.80rpx;
  border-bottom-style: dotted;
  border-bottom-color: rgb(97, 113, 114, 0.4);
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 30rpx;
}

.catalog {
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-bottom: 40rpx;
}

.content_text {
  font-size: 28rpx;
  display: inline-block;
  width: 75%;
  line-height: 45rpx;
  margin-top: 15rpx;
}

.title {
  font-size: 34rpx;
  display: inline-block;
  padding-right: 2em;
}

.author {
  font-size: 24rpx;
  display: inline-block;
  width: 25%;
  text-align: right;
  margin-top: 15rpx;
}

@keyframes playingRotate {
  0% {
    transform: scale(0.75);
  }
  50% {
    transform: scale(1.25);
  }
  100% {
    transform: scale(0.75);
  }
}

.playingicon {
  animation: playingRotate 4.5s ease-in-out infinite;
}