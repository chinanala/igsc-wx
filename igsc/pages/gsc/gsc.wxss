.operate_audio {
  height: 42rpx;
  width: 42rpx;
  padding-right: 18rpx;
  /* padding-top: 10rpx; */
}

.tabs {
  padding-top: 22rpx;
  padding-bottom: 40rpx;
}

.tab-item {
  display: inline-block;
  width: 56rpx;
  margin-right: 16rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  font-weight: 700;
}

.active {
  color: #7c4b00;
  padding-bottom: 4rpx;
  border-bottom: 3.5rpx dashed #7c4b00;
  font-weight: 800;
}

.indent {
  text-align: left;
  text-indent: 72rpx;
}

.center {
  text-align: center;
}

.title {
  font-size: 35rpx;
  text-align: center;
  margin-top: 0.1em;
}

.author {
  font-size: 35rpx;
  text-align: center;
  margin-top: 15rpx;
}

.content {
  font-size: 36rpx;
  margin-top: 10rpx;
  line-height: 1.8em;
}

.translation {
  margin-top: 10rpx;
  font-size: 32rpx;
  line-height: 1.8em;
  text-indent: 2em;
}

.gsc {
  min-height: 100%;
  padding-left: 35rpx;
  padding-right: 35rpx;
}

.anno_text {
  color: #617172;
}

.anno_text:hover {
  color: #7c4b00;
}

.playlist {
  position: fixed;
  background-color: #f3f3f2;
  width: calc(100% - 55rpx);
  bottom: 0rpx;
  height: 600rpx;
  overflow-y: scroll;
  margin-left: -35rpx;
  padding: 25rpx;
  border-radius: 30rpx;
}

.play_item {
  font-size: 28rpx;
  border-bottom: 1px dotted;
  padding-bottom: 5rpx;
  margin-top: 10rpx;
  border-bottom-color: rgb(97, 113, 114, 0.4);
}

.playlist_text {
  position: fixed;
  bottom: 600rpx;
  left: 0;
  background-color: #617172;
  width: 100%;
  margin-left: 0rpx;
  padding-top: 2rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: 50rpx;
  text-align: center;
  color:#f3f3f2;
}

#item1 {
  margin-top: 35rpx;
}

.no_scroll {
  height: 100vh;
  overflow: hidden;
}