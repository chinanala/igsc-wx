.weui-search-bar {
  position: relative;
  padding-left: 5rpx;
  padding-top: 8rpx;
  padding-bottom: 5rpx;
  padding-right: 5rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
}

.weui-icon-search {
  margin-right: 12rpx;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 8rpx;
  top: 12.5rpx;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 30rpx;
  vertical-align: middle;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5rpx;
  background: #fff;
  border: 1rpx solid #fcf9f4;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 60rpx;
  line-height: 60rpx;
  /* font: 26rpx; */
  padding: 0;
}

.weui-icon-clear {
  z-index: 10000;
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3rpx;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28rpx;
}

.weui-search-bar__cancel-btn {
  margin-left: 10rpx;
  line-height: 60rpx;
  white-space: nowrap;
  font-size: 30rpx;
  height: 60rpx;
}

.weui-search-bar__cancel-btn:hover {
  color: #09bb07;
  font-weight: 700;
}
